<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/ftb_margins</item>
        <item name="android:layout_marginBottom">@dimen/ftb_margins</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/fab_description</item>
        <item name="android:elevation">16dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/options_spacing</item>
    </style>

    <style name="image_button">
        <item name="android:background">@drawable/button_background_rounded</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/ftb_margins</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="progress_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:progressBackgroundTint">@color/colorAccent</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
